<body>
  <%- include("partials/navBar")%>

  <div class="container mt-4">
    <div class="card border-secondary">
      <div class="card-header">Nuevo Foro</div>
      <div class="card-body">
        <form action="/saveForo" method="post">
          <!-- <form action="" method="post"></form> -->
          <div class="datos">


            <div class="mb-3">
              <label for="foro" class="form-label">Titulo *</label>
              <input
                type="text"
                class="form-control"
                id="title"
                name="title"
                placeholder="Titulo del Foro"
                tabindex="1"
                required
              />
            </div>

            <div class="mb-3">
              <label for="foro" class="form-label">Descripción</label>

              <input
                type="text"
                class="form-control"
                id="description"
                name="description"
                placeholder="Breve Descripción del tema"
                tabindex="2"
              />
            </div>

            <div class="mb-3">
              <label for="foro" class="form-label">Contenido</label>


              <!-- <div id="editor" name="content" >               
              </div> -->

              <!-- <textarea id="mytextarea">Hello, World!</textarea> -->
              <textarea class="form-control" name="content" id="mytextarea"></textarea>
            </div>

            <div class="mb-3">
              <label for="foro" class="form-label">Imagen</label>
              <input
                type="text"
                class="form-control"
                id="image"
                name="image"
                placeholder="URL imagén"
                tabindex="4"
                required
              />
            </div>

            
          </div>
          
          <button type="submit"  class="btn btn-primary" tabindex="5">
            Guardar
          </button>
          <a href="/foro" class="btn btn-secondary" tabindex="6">Cancelar</a>
        </form>
      </div>
    </div>
  </div>



