<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>

    <%- include("partials/head") %>
  </head>
  <body>
    <%- include("partials/navBar") %>

    <div class="container">
      <!-- BOTONES NUEVO - INICIO -->

      <a href="/createForo" class="btn btn-outline-primary mt-4">
        <i class="bx bx-plus bx-lg"></i>
      </a>

      <a href="/" class="btn btn-outline-success mt-4">
        <i class="bx bx-home-alt-2 bx-lg"></i>
      </a>

      <div class="titulo">Listado de <%= title %></div>
      
      <table id="foro" class="table table-striped" style="width: 100%">
        <!-- CABECERAS -->
        <thead>
          <tr>
            <th scope="col">NÂ°</th>
            <th scope="col">Titulo</th>
            <th scope="col">Descripcion</th>
            <th scope="col">Imagen</th>
            <th scope="col">Visitas</th>
            <th scope="col">Acciones</th>
          </tr>
        </thead>

        <!-- CONTENIDO -->
        <tbody>
          <% results.forEach((foros)=>{ %>

          <tr>
            <td><%= foros.id %></td>
            <td><%= foros.title %></td>
            <td><%= foros.description %></td>
            <td>
              <div class="card" style="width: 4rem">
                <img src="<%=foros.image%>" class="card-img-top" alt="Imagen del foro">
              </div>
            </td>
            <!-- <td><%= foros.image %></td> -->
            <td><%= foros.visits %></td>

            <td>
              <a href="/editForo/<%= foros.id %>" class="btn btn-success">
                <i class="bx bx-edit-alt"></i>
              </a>

              <a href="/deleteForo/<%= foros.id %>" class="btn btn-danger">
                <i class="bx bx-trash"></i>
              </a>
            </td>
          </tr>

          <% }) %>
        </tbody>
      </table>
    </div>

    <%- include("partials/footer") %>
  </body>
</html>
