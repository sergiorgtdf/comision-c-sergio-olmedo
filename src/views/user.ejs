<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>

    <%- include("partials/head") %>
  </head>
  <body>
    <%- include("partials/navBar") %>

    <div class="container">
      
      <!-- BOTONES NUEVO - INICIO -->
      <a href="/createUser" class="btn btn-outline-primary mt-4">
        <i class="bx bx-plus bx-lg"></i>
      </a>

    
      <a href="/" class="btn btn-outline-success mt-4">
        <i class="bx bx-home-alt-2 bx-lg"></i>
      </a>

      <div class="titulo">Listado de <%= title %></div>
      
      <table id="user" class="table table-responsive" style="width: 100%">
        <!-- CABECERAS -->
        <thead>
          <tr>
            <th scope="col">NÂ°</th>
            <th scope="col">Nombre de Usuario</th>
            <th scope="col">Nombre y Apellido</th>
            <th scope="col">Email</th>
            <th scope="col">Rol</th>
            <th scope="col">Imagen</th>
            <th scope="col">Acciones</th>
          </tr>
        </thead>

        <!-- CONTENIDO -->
        <tbody>
          <% results.forEach((users)=>{ %>

          <tr>
            <td><%= users.id %></td>
            <td><%= users.username %></td>
            <td><%= users.nombre %> <%= users.apellido %></td>
            <td><%= users.email %></td>
            <td><%= (users.role===1)? "Administrador":"Usuario" %></td>
            <td>
              <div class="card" style="width: 4rem">
                <img src="<%=users.image%>" class="card-img-top "
                alt="Imagen del Usuario">
              </div>
            </td>

            <td>
              <a href="/editUser/<%= users.id %>" class="btn btn-success"
                ><i class="bx bx-edit-alt"></i
              ></a>

              <a href="/deleteUser/<%= users.id %>" class="btn btn-danger"
                ><i class="bx bx-trash"></i>
              </a>
            </td>
          </tr>

          <% }) %>
        </tbody>
      </table>
    </div>

    <%- include("partials/footer") %>
  </body>
</html>
