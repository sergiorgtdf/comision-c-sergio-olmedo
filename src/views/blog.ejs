<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("partials/head") %>

    <title><%- title %></title>
</head>

<body>

    <%- include("partials/navBar") %>

    <div class="container">
        <!-- BOTONES NUEVO - INICIO -->
  
        <a href="/createBlog" class="btn btn-outline-primary mt-4">
            <i class='bx bx-plus'></i>
        </a>
  
        <a href="/" class="btn btn-outline-success mt-4">
            <i class='bx bx-home-alt-2'></i>
        </a>
  
        <div class="titulo">Listado de <%= title %></div>
        
        <table id="tableBlog" class="table table-responsive table-hover table-sm" style="width: 90%" >
          <!-- CABECERAS -->
          <thead>
            <tr>
              <th scope="col">NÂ°</th>
              <th scope="col">Titulo</th>
              <th scope="col">Descripcion</th>
              <th scope="col">Imagen</th>
              <th scope="col">Visitas</th>
              <th scope="col">Acciones</th>
            </tr>
          </thead>
  
          <!-- CONTENIDO -->
          <tbody>
            <% results.forEach((blogs)=>{ %>
            <tr>
              <td><%= blogs.id %></td>
              <td><%= blogs.title %></td>
              <td><%= blogs.description %></td>
              <td>
                <div class="card" style="width: 4rem">
                  <img src="<%=blogs.image%>" class="card-img-top" alt="Imagen del foro">
                </div>
              </td>
              
              <td><%= blogs.visits %></td>
  
              <td>
                <a href="/editBlog/<%= blogs.id %>" class="btn btn-success">
                  <i class="bx bx-edit-alt"></i>
                </a>
  
                <a href="/deleteBlog/<%= blogs.id %>" class="btn btn-danger">
                  <i class="bx bx-trash"></i>
                </a>
              </td>
            </tr>

            <% }) %>
            
            
          </tbody>
        </table>
      </div>
  
      <%- include("partials/footer") %>

</body>
</html>